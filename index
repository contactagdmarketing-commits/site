        showToast("‚úÖ T√©l√©phone copi√©");
      }catch(e){
        showToast("‚ö†Ô∏è Copie impossible");
      }
    });

    // Contact form -> mailto
    document.getElementById("contactForm").addEventListener("submit", (e) => {
